<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MarkerListFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/marker_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/marker_header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_toEndOf="@+id/marker_icon"
            android:text="@string/default_header"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/marker_link"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="17sp"
            android:maxLines="1"
            android:layout_below="@id/marker_header"
            android:layout_toEndOf="@id/marker_icon"

            android:text="@string/default_link" />
    </RelativeLayout>

</LinearLayout>